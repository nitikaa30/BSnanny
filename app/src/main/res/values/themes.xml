<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BSnanny" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="navigationViewStyle">@style/NavigationDrawerMenuItemStyle</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="intro_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="intro_title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#8585C5</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="sub_text">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">#111111</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="noAcc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="verfication">
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textColor">#111111</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>
    <style name="lorem_ipsum2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#111111</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
        <item name="elevation">5dp</item>
    </style>
    <style name="NavigationDrawerMenuItemStyle" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="android:textAppearance">@style/NavigationDrawerMenuItemTextAppearance</item>
    </style>

    <style name="NavigationDrawerMenuItemTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

</resources>