<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="10dp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/findNanny_imageView"
                android:layout_width="105dp"
                android:layout_height="145dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:shapeAppearanceOverlay="@style/roundImageView"/>

            <TextView
                android:id="@+id/findNanny_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Elle Nackos"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/findNanny_imageView"/>
            <TextView
                android:id="@+id/findNanny_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/findNanny_name"
                app:layout_constraintStart_toEndOf="@id/findNanny_imageView"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                tools:text="Malaysian"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/findNanny_name"
                app:layout_constraintStart_toEndOf="@id/findNanny_country"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/findNanny_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/findNanny_name"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="28 years old"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:layout_marginEnd="70dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                />
            <TextView
                android:id="@+id/nanny_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/findNanny_country"
                app:layout_constraintStart_toEndOf="@id/findNanny_imageView"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="10dp"
                tools:text="$500"/>
            <RatingBar
                android:id="@+id/findNanny_star"
                app:layout_constraintTop_toBottomOf="@id/nanny_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="#EAC92C"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/findNanny_imageView"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/findNanny_star"
                app:layout_constraintTop_toBottomOf="@id/nanny_cost"
                tools:text="4.0"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-1dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#989898"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/findNanny_imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/findNanny_star"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="12sp"
                    android:text="Invite"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/purpleU1"
                    android:layout_weight="1"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="Hire"
                    android:textColor="@color/purpleU1"
                    android:backgroundTint="@color/white"
                    app:strokeColor="@color/purpleU1"
                    app:strokeWidth="1dp"
                    android:textAllCaps="false"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>