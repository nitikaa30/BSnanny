<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lynn Tanner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:textAppearance="@style/name"/>

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New York"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:textAppearance="@style/intro_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_12sdp" />
            <ImageView
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bullet"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toEndOf="@id/place"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginStart="@dimen/_12sdp" />
            <TextView
                android:id="@+id/parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child's Mother"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:textAppearance="@style/intro_text"
                app:layout_constraintStart_toEndOf="@id/dot"
                android:layout_marginStart="@dimen/_10sdp" />
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child's age: 5 year"
                app:layout_constraintTop_toBottomOf="@id/place"
                android:textAppearance="@style/intro_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_12sdp" />
            <ImageView
                android:id="@+id/boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/price"
                android:layout_marginStart="@dimen/_70sdp"
                android:background="@drawable/boy"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/age"/>
            <ImageView
                android:id="@+id/girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/price"
                android:layout_marginStart="@dimen/_70sdp"
                android:background="@drawable/girl"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/age"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$300"
                app:layout_constraintStart_toStartOf="parent"
                android:textAppearance="@style/name"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_68sdp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/createbt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:background="@drawable/create"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/_12sdp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>