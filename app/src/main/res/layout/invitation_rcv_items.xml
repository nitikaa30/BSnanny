<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/invitations_imageView"
                android:layout_width="105dp"
                android:layout_height="145dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:shapeAppearanceOverlay="@style/roundImageView"/>

            <TextView
                android:id="@+id/nanny_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Elle Nackos"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/invitations_imageView"/>
            <TextView
                android:id="@+id/nanny_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/nanny_name"
                app:layout_constraintStart_toEndOf="@id/invitations_imageView"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                tools:text="Malaysian"/>
            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/nanny_name"
                app:layout_constraintStart_toEndOf="@id/nanny_country"
                android:layout_marginStart="@dimen/_20sdp"

                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/nanny_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/nanny_name"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="28 years old"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:layout_marginEnd="70dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                />
            <TextView
                android:id="@+id/nanny_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/nanny_country"
                app:layout_constraintStart_toEndOf="@id/invitations_imageView"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="10dp"
                tools:text="3 years of experience"/>

            <TextView
                android:id="@+id/nanny_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/nanny_experience"
                app:layout_constraintStart_toEndOf="@id/invitations_imageView"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                tools:text="$500"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/nanny_cost"
                android:layout_marginStart="@dimen/_105sdp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/white"
                app:strokeColor="#FF4A55"
                app:cornerRadius="8dp"
                android:padding="8dp"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:text="Cancel"
                android:textColor="#FF4A55"
                android:fontFamily="@font/poppins_medium"
                app:strokeWidth="1dp"/>

            <TextView
                android:id="@+id/nanny_status"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/status_pending"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:textColor="#8E8EA1"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Pending" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>