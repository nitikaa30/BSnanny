<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.onboarding.OnboardingFragment">
    
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        />
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dot_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:progressMode="false"
        app:dotsSize="13dp"
        app:layout_constraintBottom_toTopOf="@id/nextContinueBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:dotsWidthFactor="2.5"
        app:dotsSpacing="4dp"
        app:dotsCornerRadius="8dp"
        app:selectedDotColor="#8585C5"
        app:dotsColor="#D3D3D3"
        app:dotsClickable="true"
       />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextContinueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/black"
        android:text="Next"
        android:fontFamily="@font/poppins_medium"
        android:textAllCaps="false"
        app:cornerRadius="8dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>