<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.example.bsnanny.fragments.splash.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/splash"/>
        <action
            android:id="@+id/action_splash_to_signIn"
            app:destination="@id/signIn"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.example.bsnanny.fragments.signin.SignIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signIn_to_signUp"
            app:destination="@id/signUp" />
        <action
            android:id="@+id/action_signIn_to_otp"
            app:destination="@id/otp" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.bsnanny.fragments.onboarding.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_onboardingFragment_to_signIn"
            app:destination="@id/signIn"
            app:popUpToInclusive="true"
            app:popUpTo="@id/onboardingFragment"/>
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.example.bsnanny.fragments.signup.SignUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_to_signIn"
            app:destination="@id/signIn"
            app:popUpToInclusive="true"
            app:popUpTo="@id/signIn"/>
        <action
            android:id="@+id/action_signUp_to_otp"
            app:destination="@id/otp" />
    </fragment>
    <fragment
        android:id="@+id/otp"
        android:name="com.example.bsnanny.fragments.otp.Otp"
        android:label="fragment_otp"
        tools:layout="@layout/fragment_otp" >
        <action
            android:id="@+id/action_otp_to_chooseProfile"
            app:destination="@id/chooseProfile"
            app:popUpToInclusive="true"
            app:popUpTo="@id/otp"/>
    </fragment>
    <fragment
        android:id="@+id/chooseProfile"
        android:name="com.example.bsnanny.fragments.chooseProfile.ChooseProfile"
        android:label="fragment_choose_profile"
        tools:layout="@layout/fragment_choose_profile" >
        <action
            android:id="@+id/action_chooseProfile_to_dashboard"
            app:destination="@id/dashboard" />
    </fragment>
    <fragment
        android:id="@+id/dashboard"
        android:name="com.example.bsnanny.fragments.dashboard.Dashboard"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboard_to_jobCard"
            app:destination="@id/jobCard" />
    </fragment>
    <fragment
        android:id="@+id/jobCard"
        android:name="com.example.bsnanny.fragments.jobCard.JobCard"
        android:label="fragment_job_card"
        tools:layout="@layout/fragment_job_card" />
</navigation>